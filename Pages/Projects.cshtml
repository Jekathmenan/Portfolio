@page
@model PortfolioApp.Pages.ProjectsModel
@{
    ViewData["Title"] = "My Projects";
}

<div class="max-w-6xl mx-auto px-4 py-8">
    <h1 class="font-bold text-xl text-center mb-8">Meine Projekte</h1>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        @foreach (var project in Model.Projects)
        {
            <div class="bg-white shadow-md rounded-lg p-6 border border-gray-100">
                <h2 class="text-2xl font-semibold mb-2">@project.Title</h2>
                <p class="text-sm mb-4">@project.Description</p>

                @if (!string.IsNullOrEmpty(project.TechStack))
                {
                    <p class="text-xs italic mb-2">Tech: @project.TechStack</p>
                }

                <div class="mt-4 flex gap-4">
                    @if (!string.IsNullOrEmpty(project.GithubUrl))
                    {
                        <a href="@project.GithubUrl" target="_blank" class="text-blue-500 hover:underline">GitHub</a>
                    }
                    @if (!string.IsNullOrEmpty(project.DemoUrl))
                    {
                        <a href="@project.DemoUrl" target="_blank" class="text-green-500 hover:underline">Demo</a>
                    }
                </div>
            </div>
        }
    </div>
</div>
