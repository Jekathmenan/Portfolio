@page
@model PortfolioApp.Pages.Admin.CareerModel
@{
    ViewData["Title"] = "Admin - Karriereschritte";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-blue-700">Karrierenschritt einfügen</h1>

    <form method="post" class="space-y-4 bg-white p-6 rounded shadow">
        <div>
            <label class="block text-sm font-medium text-gray-700">Name</label>
            <input asp-for="NewCareer.Name" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="NewCareer.Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700">Zeitbereich</label>
            <input asp-for="NewCareer.Period" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="NewCareer.Period" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700">Firma</label>
            <input asp-for="NewCareer.Company" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="NewCareer.Company" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700">Adresse</label>
            <input asp-for="NewCareer.Address" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="NewCareer.Address" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            Karriereschritt einfügen
        </button>
    </form>

    <h2 class="text-2xl font-semibold mt-10 mb-4">Vorhandene Karriereschritte</h2>
    <ul class="space-y-3">
        @foreach (var career in Model.Careers)
        {
            <li class="p-4 bg-gray-100 rounded shadow-sm">
                <strong>@career.Name</strong> - <span class="text-sm text-gray-500">@career.Period</span>
            </li>
        }
    </ul>
</div>
