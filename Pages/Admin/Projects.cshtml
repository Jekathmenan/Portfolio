@page
@model PortfolioApp.Pages.Admin.ProjectsModel
@{
    ViewData["Title"] = "Admin - Projects";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-blue-700">Add New Project</h1>

    <form method="post" class="space-y-4 bg-white p-6 rounded shadow">
        <div>
            <label class="block text-sm font-medium text-gray-700">Title</label>
            <input asp-for="NewProject.Title" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="NewProject.Title" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700">Description</label>
            <textarea asp-for="NewProject.Description" rows="3" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm"></textarea>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700">Tech Stack</label>
            <input asp-for="NewProject.TechStack" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700">GitHub URL</label>
            <input asp-for="NewProject.GithubUrl" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700">Demo URL</label>
            <input asp-for="NewProject.DemoUrl" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
        </div>

        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            Add Project
        </button>
    </form>

    <h2 class="text-2xl font-semibold mt-10 mb-4">Existing Projects</h2>
    <ul class="space-y-3">
        @foreach (var project in Model.Projects)
        {
            <li class="p-4 bg-gray-100 rounded shadow-sm">
                <strong>@project.Title</strong> - <span class="text-sm text-gray-500">@project.TechStack</span>
            </li>
        }
    </ul>
</div>
